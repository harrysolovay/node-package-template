{
  "$schema": "https://json.schemastore.org/package",
  "name": "package-name",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "types": "esm/index.d.ts",
  "module": "esm/index.js",
  "main": "cjs/index.js",
  "sideEffects": false,
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "cjs",
    "esm"
  ],
  "description": "",
  "repository": "github:harrysolovay/package-name",
  "keywords": [],
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "conditional-type-checks": "^1.0.5",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.0-beta"
  },
  "jest": {
    "cache": false,
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "tsconfig": "tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts",
      "**/tests/**/*"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "verbose": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run test --bail && npm run build"
    }
  },
  "scripts": {
    "clean": "rm -rf cjs esm node_modules",
    "format": "prettier --write '{*.(json|md),src/**}' --loglevel error",
    "test": "jest",
    "build": "tsc -P tsconfig.cjs.json & tsc -P tsconfig.esm.json",
    "release": "standard-version",
    "example": "ts-node example"
  }
}
