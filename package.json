{
  "$schema": "https://json.schemastore.org/package",
  "name": "node-package-template",
  "license": "Apache-2.0",
  "types": "esm/index.d.ts",
  "module": "esm/index.js",
  "main": "cjs/index.js",
  "sideEffects": false,
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "A living, best-practices template for TypeScript packages",
  "repository": "github:harrysolovay/node-package-template",
  "bugs": "https://github.com/harrysolovay/node-package-template/issues",
  "homepage": "https://github.com/harrysolovay/node-package-template#readme",
  "contributors": [
    "Harry Solovay <harrysolovay@gmail.com>"
  ],
  "keywords": [
    "node",
    "package",
    "template"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "conditional-type-checks": "^1.0.5",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.0-beta"
  },
  "jest": {
    "cache": false,
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "tsconfig": "tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts",
      "**/tests/**/*"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "verbose": false
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test && npm run build"
    }
  },
  "scripts": {
    "clean": "rm -rf cjs esm node_modules",
    "lint": "prettier --write '{example,src}/**/*'",
    "test": "jest --coverage",
    "build": "tsc -P tsconfig.cjs.json & tsc -P tsconfig.esm.json",
    "example": "ts-node example"
  }
}
