{
  "$schema": "https://json.schemastore.org/package",
  "name": "package-name",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "types": "esm/index.d.ts",
  "module": "esm/index.js",
  "main": "cjs/index.js",
  "sideEffects": false,
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "cjs",
    "esm"
  ],
  "description": "",
  "repository": {
    "directory": ".",
    "type": "git",
    "url": "https://github.com/harrysolovay/package-name"
  },
  "keywords": [],
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "conditional-type-checks": "^1.0.5",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "npm-check-updates": "^11.1.10",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "build": "tsc & tsc -P tsconfig.esm.json",
    "clean": "rm -rf cjs esm",
    "format": "prettier --write . --ignore=node_modules",
    "rm-pkgs": "rm -rf node_modules",
    "rm-pkgs-and-lock": "rm -rf node_modules package-lock.json",
    "update-deps": "npm run rm-pkgs-and-lock && ncu -u && npm i",
    "check": "tsc --noEmit",
    "release": "standard-version",
    "release-next": "npm run release -- --prerelease next",
    "example": "ts-node example"
  }
}
