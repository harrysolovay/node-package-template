{
  "name": "node-package-template",
  "license": "Apache-2.0",
  "module": "esm/index.js",
  "main": "cjs/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "node-package-template": "cjs/cli.js"
  },
  "sideEffects": false,
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "A living, comprehensive, best-practices template for Node packages",
  "repository": "github:harrysolovay/node-package-template",
  "bugs": "https://github.com/harrysolovay/node-package-template/issues",
  "homepage": "https://github.com/harrysolovay/node-package-template#readme",
  "authors": [
    "Harry Solovay <harrysolovay@gmail.com>"
  ],
  "keywords": [
    "node",
    "package",
    "template"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.5.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "conditional-type-checks": "^1.0.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.3",
    "eslint-plugin-sort-keys-fix": "^1.1.0",
    "eslint-plugin-tsdoc": "^0.2.1",
    "eslint-plugin-typescript-sort-keys": "^0.5.0",
    "eslint-plugin-unicorn": "^15.0.1",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "semantic-release": "^17.0.4",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "typedoc": "^0.17.5",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.8.2"
  },
  "jest": {
    "cache": false,
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "tsConfig": "tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.ts",
      "**/tests/**/*"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "verbose": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn test && yarn build:reference && yarn commit:reference",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "channel": "next"
      },
      {
        "name": "beta",
        "channel": "beta",
        "prerelease": "beta"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md"
          ]
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/npm"
      ]
    ]
  },
  "scripts": {
    "clean": "rm -rf yarn.lock node_modules esm cjs types",
    "lint": "eslint '{example,src}/**/*' --fix",
    "test": "jest --coverage",
    "build:reference": "typedoc && prettier 'docs/reference/**' --write",
    "commit:reference": "git add docs/reference && git commit -m \"chore: build API reference\"",
    "build:types": "tsc -p tsconfig.types.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && chmod +x cjs/cli.js",
    "build": "yarn build:esm & yarn build:cjs & yarn build:types",
    "example": "ts-node example"
  }
}
