{
  "name": "node-package-template",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "A living, comprehensive, best-practices template for Node packages",
  "repository": "github:harrysolovay/node-package-template",
  "bugs": "https://github.com/harrysolovay/node-package-template/issues",
  "homepage": "https://github.com/harrysolovay/node-package-template#readme",
  "author": "Harry Solovay <harrysolovay@gmail.com> (harrysolovay.com)",
  "keywords": [
    "node",
    "package",
    "template"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-simple-bin": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.5.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sort-class-members": "^1.6.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.3",
    "eslint-plugin-sort-keys-fix": "^1.1.0",
    "eslint-plugin-tsdoc": "^0.2.1",
    "eslint-plugin-typescript-sort-keys": "^0.5.0",
    "eslint-plugin-unicorn": "^15.0.1",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "semantic-release": "^17.0.4",
    "semantic-release-plugin-update-version-in-files": "^1.0.0",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "jest": {
    "cache": false,
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "tsConfig": "tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.ts",
      "**/tests/**/*"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "verbose": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "channel": "next"
      },
      {
        "name": "beta",
        "channel": "beta",
        "prerelease": "beta"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md"
          ]
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-node/index.js",
            "pkg/dist-src/version.js"
          ],
          "placeholder": "SEMANTIC_VERSION_PLACEHOLDER"
        }
      ]
    ]
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "node-package-template-cli"
        }
      ]
    ]
  },
  "scripts": {
    "clean": "rm -rf yarn.lock node_modules",
    "lint": "eslint '{example,src}/**/*' -c .eslintrc --fix",
    "test": "rm -rf pkg & jest --coverage",
    "build": "pika build",
    "example": "ts-node example"
  }
}
