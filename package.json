{
    "$schema": "https://json.schemastore.org/package",
    "name": "package-name",
    "version": "0.0.0",
    "license": "Apache-2.0",
    "types": "esm/index.d.ts",
    "module": "esm/index.js",
    "main": "cjs/index.js",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "sideEffects": false,
    "files": [
        "cjs",
        "esm"
    ],
    "description": "",
    "repository": {
        "directory": ".",
        "type": "git",
        "url": "https://github.com/harrysolovay/package-name"
    },
    "keywords": [],
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^2.0.4",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.1",
        "conditional-type-checks": "^1.0.5",
        "husky": "^7.0.2",
        "jest": "^27.2.1",
        "npm-check-updates": "^11.8.5",
        "prettier": "^2.4.1",
        "standard-version": "^9.3.1",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "typedoc": "^0.22.4",
        "typedoc-plugin-markdown": "^3.11.1",
        "typescript": "^4.4.3"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "jest",
        "build": "tsc & tsc -P tsconfig.esm.json",
        "clean": "rm -rf cjs esm",
        "format": "prettier --write . --ignore-path=node_modules/**",
        "rm-pkgs": "rm -rf node_modules",
        "rm-pkgs-and-lock": "rm -rf node_modules package-lock.json",
        "update-deps": "npm run rm-pkgs-and-lock && ncu -u && npm i",
        "check": "tsc --noEmit",
        "release": "standard-version",
        "release-next": "npm run release -- --prerelease next",
        "example": "ts-node example"
    }
}
